<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addunit_layout"
    android:background="@color/colorBottomNavigationActiveColored">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/important_articals" />

    <TextView
        android:id="@+id/singleunit_unittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Unit Name"
        android:textSize="16dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:id="@+id/singleunit_lessontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singleunit_unittext"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="12"
        android:textColor="@color/colorBottomNavigationInactive" />

    <ImageView
        android:id="@+id/singleunit_nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/ic_chevron_right_black_18dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singleunit_unittext"
        android:layout_toEndOf="@+id/singleunit_lessontext"
        android:layout_marginLeft="5dp"
        android:text="lesson"
        android:textColor="@color/colorBottomNavigationInactive" />
</RelativeLayout>