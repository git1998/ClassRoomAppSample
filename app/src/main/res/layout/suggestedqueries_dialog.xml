<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@color/colorBottomNavigationActiveColored"
    android:orientation="vertical">

    <include layout="@layout/suggestedqueries_dialog_appbar"></include>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Your Query"
        android:textColor="#424242"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/suggestedqueries_subject_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="subject"
        android:textColor="@color/colorBottomNavigationInactive" />

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/suggestqueries_yourquery_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:text="This is your query that you typed in previous page"
        android:textColor="@color/colorBottomNavigationInactive" />

    <LinearLayout
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/suggestedqueries_discardbtn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBottomNavigationActiveColored"
            android:text="discard"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/suggestedqueries_postbtn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#49acd5"
            android:text="post" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="16dp"
        android:text="Suggested Queries"
        android:textSize="16dp"
        android:textColor="#424242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>