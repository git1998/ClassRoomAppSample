<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_grand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorBottomNavigationActiveColored"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="#Abhijit92222222222222222222"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="29 jun"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <TextView
            android:id="@+id/question_queMsg"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="14dp"
            android:text="anyone..solve this quickly??tttttttttttttttttttttttttttttttttttttttttttttttttttanyone..solve this quickly??tttttttttttttttttttttttttttttttttttttttanyone..solve this quickly??ttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <ImageView
        android:id="@+id/question_thumbImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/question_queMsg"
        app:srcCompat="@drawable/important_articals" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/question_queMsg">

        <RelativeLayout
            android:id="@+id/question_answer"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_question_answer_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Answer"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        </LinearLayout>

            <TextView

                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:background="@android:drawable/ic_notification_overlay"
                android:text="6"
                android:textSize="15dp">

            </TextView>

        </RelativeLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/question_starred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_star_border_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starred"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>