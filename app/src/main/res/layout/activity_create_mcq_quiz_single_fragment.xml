<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBottomNavigationActiveColored">


    <ScrollView
        android:id="@+id/createQuiz_ScrollView"
        android:layout_below="@id/createQuiz_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Enter Text Here"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorBottomNavigationInactive"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/linearLayout1"
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Enter Text Here"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorBottomNavigationInactive"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/linearLayout2"
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText3"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Enter Text Here"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorBottomNavigationInactive"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:visibility="gone"/>
            </LinearLayout>




            <LinearLayout
                android:id="@id/linearLayout4"
                android:layout_below="@id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/createQuizTextBtn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/colorBottomNavigationActiveColored"
                    android:text="text"
                    android:textColor="@android:color/darker_gray" />

                <Button
                    android:id="@+id/createQuizImageBtn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#49acd5"
                    android:text="Image"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <ImageView
                    android:id="@+id/createQuizCrossImage"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/createQuiz_OptionLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout4"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/gallery_thumb"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/createQuiz_RadioBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/createQuiz_OptionEditText1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="100m/s"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/createQuiz_OptionImage1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/createQuizOptionTextBtn1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorBottomNavigationActiveColored"
                        android:text="text"
                        android:textColor="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/createQuizOptionImageBtn1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="#49acd5"
                        android:text="Image"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/createQuiz_OptionLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/createQuiz_OptionLayout1"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/gallery_thumb"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/createQuiz_RadioBtn2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/createQuiz_OptionEditText2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="100m/s"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/createQuiz_OptionImage2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout3">

                    <Button
                        android:id="@+id/createQuizOptionTextBtn2"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorBottomNavigationActiveColored"
                        android:text="text"
                        android:textColor="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/createQuizOptionImageBtn2"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="#49acd5"
                        android:text="Image"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/createQuiz_OptionLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/createQuiz_OptionLayout2"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/gallery_thumb"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/createQuiz_RadioBtn3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/createQuiz_OptionEditText3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="100m/s"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/createQuiz_OptionImage3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/createQuizOptionTextBtn3"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorBottomNavigationActiveColored"
                        android:text="text"
                        android:textColor="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/createQuizOptionImageBtn3"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="#49acd5"
                        android:text="Image"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/createQuiz_OptionLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/createQuiz_OptionLayout3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@android:drawable/gallery_thumb"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/createQuiz_RadioBtn4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/createQuiz_OptionEditText4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="100m/s"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/createQuiz_OptionImage4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/createQuizOptionTextBtn4"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@color/colorBottomNavigationActiveColored"
                        android:text="text"
                        android:textColor="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/createQuizOptionImageBtn4"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="#49acd5"
                        android:text="Image"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/createQuiz_uploadSolutionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/createQuiz_OptionLayout1">

                <ImageView
                    android:src="@drawable/ic_image_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Solution"
                    android:textColor="@color/colorBottomNavigationInactive" />
            </LinearLayout>

                <Button
                    android:layout_marginLeft="85dp"
                android:id="@+id/createQuiz_doneBtn"
                    android:background="#49acd5"
                    android:textColor="@android:color/black"
                android:text="done"
                android:layout_width="80dp"
                android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/createQuiz_uploadedSolutionLayout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/createQuiz_answerNo"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/createQuiz_OfficialANswer"
                    android:src="@drawable/unavailablepostimage"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
