<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="8dp"
    android:background="@android:drawable/editbox_background"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="4dp"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_attach_file_black_36dp"
        android:id="@+id/circleImageView3" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageView3"
        android:layout_toEndOf="@+id/circleImageView3"
        android:text="Introduction to Laws of Motion"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18dp"
        android:id="@+id/singlepdf_topicname" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/singlepdf_topicname"
        android:src="@drawable/ic_favorite_border_black_24dp" />

</RelativeLayout>
